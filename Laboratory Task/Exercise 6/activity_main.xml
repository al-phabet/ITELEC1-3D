<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Header -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alarm"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <!-- Scrollable section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <!-- Card 1 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#1A1A1A"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:text="@string/work"
                            android:contentDescription="@string/work_alarm"
                            android:textColor="#BBBBBB"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:text="@string/time1"
                            android:contentDescription="@string/time"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:text="@string/date1"
                            android:contentDescription="@string/date"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:paddingTop="10dp"
                            android:paddingBottom="8dp">

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switchWork"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:checked="true"
                                android:contentDescription="@string/toggle_work_alarm"
                                app:thumbTint="@android:color/white"
                                app:trackTint="@color/switch_track_tint"
                                tools:ignore="TouchTargetSizeCheck" />
                        </FrameLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <!-- Card 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#1A1A1A"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:text="@string/exercise"
                            android:contentDescription="@string/exercise_alarm"
                            android:textColor="#BBBBBB"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:text="@string/time2"
                            android:contentDescription="@string/time"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:contentDescription="@string/date"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/date2"
                            android:textColor="#0288D1"
                            android:textSize="12sp"
                            tools:ignore="TextContrastCheck" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:paddingTop="10dp"
                            android:paddingBottom="8dp">

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switchExercise"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:checked="true"
                                android:contentDescription="@string/toggle_exercise_alarm"
                                app:thumbTint="@android:color/white"
                                app:trackTint="@color/switch_track_tint"
                                tools:ignore="TouchTargetSizeCheck" />
                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <!-- Card 3 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#1A1A1A"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:text="@string/presentation"
                            android:contentDescription="@string/presentation_alarm"
                            android:textColor="#BBBBBB"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:text="@string/time3"
                            android:contentDescription="@string/time"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:text="@string/date3"
                            android:contentDescription="@string/date"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:paddingTop="10dp"
                            android:paddingBottom="8dp">

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_presentation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:checked="false"
                                android:contentDescription="@string/toggle_presentation_alarm"
                                app:thumbTint="@android:color/white"
                                app:trackTint="@color/switch_track_tint"
                                tools:ignore="TouchTargetSizeCheck" />
                        </FrameLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <!-- Card 2 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="#1A1A1A"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:text="@string/dinner_date"
                            android:contentDescription="@string/dinner_date_alarm"
                            android:textColor="#BBBBBB"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:text="@string/time4"
                            android:contentDescription="@string/time"
                            android:textColor="@android:color/white"
                            android:textSize="28sp"
                            android:textStyle="bold"
                            android:layout_marginTop="6dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <TextView
                            android:text="@string/date4"
                            android:contentDescription="@string/date"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"/>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:paddingTop="10dp"
                            android:paddingBottom="8dp">

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_dinnerdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:checked="false"
                                android:contentDescription="@string/toggle_dinner_date_alarm"
                                app:thumbTint="@android:color/white"
                                app:trackTint="@color/switch_track_tint"
                                tools:ignore="TouchTargetSizeCheck" />
                        </FrameLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Add more rows as needed -->
        </LinearLayout>
    </ScrollView>

    <!-- Add Button -->
    <ImageView
        android:id="@+id/fabAdd"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/circle_add"
        android:contentDescription="@string/add_new_alarm"
        android:elevation="8dp"
        android:padding="13dp"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#1A1A1A"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Alarm -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/alarm_icon"
                android:src="@drawable/ic_alarm"
                app:tint="#5682B1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/alarm_label"
                android:layout_marginTop="2dp"
                android:text="@string/alarm"
                android:textColor="#5682B1"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

        <!-- Clock -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/clock_icon"
                android:src="@drawable/ic_clock"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/clock_label"
                android:text="@string/clock"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Timer -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/timer_icon"
                android:src="@drawable/ic_timer"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/timer_label"
                android:text="@string/timer"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Stopwatch -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginHorizontal="25dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/stopwatch_icon"
                android:src="@drawable/ic_stopwatch"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/stopwatch_label"
                android:text="@string/stopwatch"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>

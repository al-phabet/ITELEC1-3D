<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when ToggleButton is ON -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800"/>
            <corners android:radius="30dp"/>
            <stroke android:width="2dp" android:color="#388E3C"/>
            <padding android:left="10dp" android:top="10dp" android:right="20dp" android:bottom="10dp"/>
        </shape>
    </item>

    <!-- State when ToggleButton is OFF -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/>
            <corners android:radius="30dp"/>
            <stroke android:width="2dp" android:color="#9E9E9E"/>
            <padding android:left="10dp" android:top="10dp" android:right="20dp" android:bottom="10dp"/>
        </shape>
    </item>

</selector>
